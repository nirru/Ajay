
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d6d6d6"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">




        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.oxilo.oioindia.view.fragments.BusinessDetailFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="30dp"
              android:background="#FFFFFF">

              <TextView
                  android:id="@+id/ll_top_header"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true"
                  android:gravity="center"
                  android:layout_marginTop="10dp"
                  android:background="#FFFFFF"
                  android:text="Tap a number to call"
                  android:textSize="16dp"
                  android:textStyle="bold" />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/ll_top_header"
                  android:background="@color/cardview_shadow_start_color"/>

              <TextView
                  android:id="@+id/ll_number1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_below="@+id/ll_top_header"
                  android:gravity="center"
                  android:layout_marginTop="20dp"
                  android:text="+919999999999"
                  android:textSize="20dp"
                  />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_below="@+id/ll_number1"
                  android:layout_marginTop="10dp"
                  android:background="@color/cardview_shadow_start_color"/>
              <TextView
                  android:id="@+id/ll_number2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:gravity="center"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/ll_number1"
                  android:text="+91-9441333333"
                  android:textSize="20dp"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_below="@+id/ll_number2"
                  android:layout_marginTop="10dp"
                  android:background="@color/cardview_shadow_start_color"/>
              <TextView
                  android:id="@+id/ll_number3"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:gravity="center"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/ll_number2"
                  android:text="+91-9441355541"
                  android:textSize="20dp"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_below="@+id/ll_number3"
                  android:layout_marginTop="10dp"
                  android:background="@color/cardview_shadow_start_color"/>
              <TextView
                  android:id="@+id/ll_number4"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:gravity="center"
                  android:layout_margin="20dp"
                  android:layout_below="@+id/ll_number3"
                  android:text="+91-94413363625"
                  android:textSize="20dp"
                  />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_below="@+id/ll_number4"
                  android:background="@color/cardview_shadow_start_color"/>


          </RelativeLayout>
        </RelativeLayout>




    </ScrollView>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progress_bar"
        android:layout_margin="8dp"/>

</LinearLayout>