<layout >
    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.oxilo.oioindia.viewmodal.BusinesListViewModal"/>

        <variable
            name="handler"
            type="com.oxilo.oioindia.handlers.MyHandlers"/>

        <variable
            name="repo"
            type="com.oxilo.oioindia.vo.SubCategory"/>

    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        app:layout_collapseMode="pin"
                        app:navigationIcon="?attr/homeAsUpIndicator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white"
                        android:text="@={repo.subcatname}"/>
                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/categorylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.enable ? View.GONE : View.VISIBLE}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">



        </android.support.v7.widget.RecyclerView>


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{vm.enable ? View.VISIBLE : View.GONE}"
            android:id="@+id/progress_bar"
            android:layout_margin="8dp"/>


    </android.support.design.widget.CoordinatorLayout>

</layout>